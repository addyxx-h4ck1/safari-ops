{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["node_modules/@types/*", "packages/types/*"],
      "@utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
